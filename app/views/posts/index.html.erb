<div class="container">
  <header class="header">
    <h1>一覧</h1>
  </header>
    <p><%= notice %></p>

    <table>
      <tr>
        <th>内容</th>
      </tr>
      <% @post.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= link_to '内容を確認',post_path(post.id)  %></td>
          <td><%= link_to '編集する',edit_post_path(post.id)  %></td>
          <td><%= link_to '削除する',post_path(post.id), method: :delete ,data: { confirm:'削除しますか？'}  %></td>
        </tr>
      <% end %>
    </table>
    <%= link_to '新しく投稿する',new_post_path %>

      <footer class="footer">
        <p>speak_app_footer</p>
      </footer>
    </div>
