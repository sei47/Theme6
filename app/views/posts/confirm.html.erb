<h2 class="header">以下の内容で送信する</h2>

<%= form_with(model: @post, local: true) do |form| %>

  <%= form.hidden_field :content %>

  <p class="content">本文:<%= @post.content %></p>
  <%= form.submit "登録する" %>

  <%= form.submit "戻る",name: 'back' %>
<% end %>

<footer class="footer">
  <p>speak_app_footer</p>
</footer>
